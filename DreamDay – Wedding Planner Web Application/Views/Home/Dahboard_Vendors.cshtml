@{
    ViewData["Title"] = "Vendors";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            background-color: #f5f7fa;
        }

        .sidebar {
            background: linear-gradient(180deg, #3F51B5 0%, #5C6BC0 100%);
            color: #fff;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #e0e0e0;
                font-weight: 500;
            }

                .sidebar .nav-link:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }

                .sidebar .nav-link.active {
                    background-color: #fff;
                    color: #3F51B5 !important;
                    font-weight: bold;
                    border-radius: 8px;
                }

        .vendor-card {
            border-radius: 12px;
            border-left: 5px solid #3F51B5;
            background: #fff;
            transition: 0.3s;
        }

            .vendor-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            }

        .vendor-status {
            font-size: 0.9rem;
        }

            .vendor-status.booked {
                color: green;
                font-weight: bold;
            }

            .vendor-status.pending {
                color: orange;
                font-weight: bold;
            }

        .btn-toggle {
            font-size: 0.875rem;
            padding: 4px 12px;
            border-radius: 6px;
        }

        .btn-book {
            background-color: #3F51B5;
            color: white;
            border: none;
        }

        .btn-cancel {
            background-color: #f44336;
            color: white;
            border: none;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-12 col-md-3 col-lg-2 sidebar p-4">
            <h4 class="fw-bold text-white mb-4"><i class="fas fa-gem me-2"></i>DreamDay</h4>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Dashboard"><i class="fas fa-home me-2"></i>Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Checklist"><i class="fas fa-check-circle me-2"></i>Checklist</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Budget"><i class="fas fa-wallet me-2"></i>Budget</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Guests"><i class="fas fa-users me-2"></i>Guests</a></li>
                <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Dahboard_Vendors"><i class="fas fa-store me-2"></i>Vendors</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Timeline"><i class="fas fa-calendar-alt me-2"></i>Timeline</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="col-12 col-md-9 col-lg-10 px-4 py-5">
            <h2 class="fw-bold text-primary mb-4"><i class="fas fa-store me-2"></i>Vendor Bookings</h2>

            <div class="row g-4" id="vendor-container">
                <!-- Vendor cards injected by JS -->
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        const defaultVendors = [
            { name: "Golden Garden Venue", category: "Venue", status: "Pending", icon: "fa-map-marker-alt" },
            { name: "Lens & Love Photography", category: "Photography", status: "Pending", icon: "fa-camera-retro" },
            { name: "Flavors Catering Co.", category: "Catering", status: "Pending", icon: "fa-utensils" },
            { name: "Bloom & Co.", category: "Florist", status: "Pending", icon: "fa-seedling" },
            { name: "Harmony DJs", category: "Entertainment", status: "Pending", icon: "fa-music" },
            { name: "Glam by Sara", category: "Makeup", status: "Pending", icon: "fa-magic" }
        ];

        let vendors = JSON.parse(localStorage.getItem("dreamdayVendors")) || defaultVendors;

        const saveVendors = () => {
            localStorage.setItem("dreamdayVendors", JSON.stringify(vendors));
        };

        const toggleStatus = (index) => {
            vendors[index].status = vendors[index].status === "Booked" ? "Pending" : "Booked";
            saveVendors();
            renderVendors();
        };

        const renderVendors = () => {
            const container = document.getElementById("vendor-container");
            container.innerHTML = "";

            vendors.forEach((vendor, index) => {
                const isBooked = vendor.status === "Booked";
                const statusClass = isBooked ? "booked" : "pending";
                const buttonClass = isBooked ? "btn-cancel" : "btn-book";
                const buttonLabel = isBooked ? "Cancel Booking" : "Book Vendor";

                const card = document.createElement("div");
                card.className = "col-md-6 col-lg-4";
                card.innerHTML = `
                    <div class="vendor-card p-4 shadow-sm h-100">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas ${vendor.icon} fa-2x text-primary me-3"></i>
                            <div>
                                <h5 class="mb-0">${vendor.name}</h5>
                                <small class="text-muted">${vendor.category}</small>
                            </div>
                        </div>
                        <p class="vendor-status ${statusClass}">Status: ${vendor.status}</p>
                        <button class="btn btn-sm btn-toggle ${buttonClass}" onclick="toggleStatus(${index})">
                            ${buttonLabel}
                        </button>
                    </div>
                `;
                container.appendChild(card);
            });
        };

        // Initialize
        renderVendors();
    </script>
}
