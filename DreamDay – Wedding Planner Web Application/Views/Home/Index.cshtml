@{
    ViewData["Title"] = "Home Page";
}


    <style>
    .feature-icon {
        transition: transform 0.3s ease;
    }

        .feature-icon:hover {
            transform: scale(1.2);
        }

    .hover-shadow:hover {
        box-shadow: 0 0 20px rgba(63, 81, 181, 0.15);
        transition: 0.3s ease;
    }

    .transition {
        transition: all 0.3s ease-in-out;
    }


        .section-bg-lightblue {
            background-color: #f0f4ff;
        }

        .carousel-caption h5,
        .carousel-caption p {
            text-shadow: 1px 1px 3px rgba(0,0,0,0.6);
        }

        .btn-light:hover {
            background-color: #e6e6e6;
        }

        .carousel-item img {
            height: 500px;
            object-fit: cover;
            filter: brightness(0.85);
        }
    </style>


<!-- Hero Section with Carousel -->
<section>
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/weddings_img1.webp" class="d-block w-100" alt="Wedding Couple" />
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="display-4 fw-bold text-white">Plan Your Dream Wedding with Ease</h5>
                    <p class="lead">Elegant. Organized. Effortless. DreamDay brings your vision to life.</p>
                    <a href="/Identity/Account/Register" class="btn btn-light btn-lg mt-2">
                        <i class="fa-solid fa-calendar-check me-2"></i> Start Planning
                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/slide4.jpg" class="d-block w-100" alt="Wedding Venue">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="display-5 fw-bold">Discover Trusted Vendors</h5>
                    <p class="lead">Explore venues, florists, photographers, and more.</p>
                    <a href="/Identity/Account/Register" class="btn btn-light btn-lg mt-2">
                        <i class="fa-solid fa-calendar-check me-2"></i> Start Planning
                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/slide3.jpg" class="d-block w-100" alt="Wedding Table">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="display-5 fw-bold">Simplify Your Planning Journey</h5>
                    <p class="lead">From budget tracking to guest lists — we’ve got you covered.</p>
                    <a href="/Identity/Account/Register" class="btn btn-light btn-lg mt-2">
                        <i class="fa-solid fa-calendar-check me-2"></i> Start Planning
                    </a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="mb-4 fw-bold text-primary">Why Choose DreamDay?</h2>
        <p class="text-muted mb-5 fs-5">We bring elegance, ease, and efficiency to your wedding planning experience.</p>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="p-4 border rounded-4 shadow-sm h-100 hover-shadow transition">
                    <i class="fas fa-clipboard-list fa-3x text-primary mb-3 feature-icon"></i>
                    <h5 class="fw-semibold">Custom Checklists</h5>
                    <p class="text-muted">Stay on top of every detail with personalized to-do lists designed to fit your unique plans.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded-4 shadow-sm h-100 hover-shadow transition">
                    <i class="fas fa-hand-holding-usd fa-3x text-success mb-3 feature-icon"></i>
                    <h5 class="fw-semibold">Budget Management</h5>
                    <p class="text-muted">Track every expense and make confident decisions with our smart budget tools.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded-4 shadow-sm h-100 hover-shadow transition">
                    <i class="fas fa-store fa-3x text-info mb-3 feature-icon"></i>
                    <h5 class="fw-semibold">Trusted Vendors</h5>
                    <p class="text-muted">Browse a curated list of verified venues, caterers, decorators, and more.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold text-primary">About DreamDay</h2>
        <p class="mt-3 text-muted fs-5">DreamDay is your one-stop online wedding planner platform, designed to simplify every step of your wedding journey. Whether you're newly engaged or a professional wedding planner, our tools are tailored to your needs and made to inspire confidence and creativity.</p>

        <div class="mt-4">
            <a href="/Identity/Account/Register" class="btn btn-primary btn-lg px-4 rounded-pill">
                <i class="fas fa-heart me-2"></i> Join DreamDay Today
            </a>
        </div>
    </div>
</section>
