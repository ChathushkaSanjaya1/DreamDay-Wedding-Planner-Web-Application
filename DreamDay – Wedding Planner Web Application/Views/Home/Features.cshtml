@{
    ViewData["Title"] = "Platform Features";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
        }

        .feature-block {
            border: 1px solid #e0e0e0;
            border-radius: 15px;
            padding: 30px;
            transition: 0.3s ease;
        }

            .feature-block:hover {
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
            }

        .feature-icon {
            font-size: 2.5rem;
            color: #3F51B5;
            margin-bottom: 15px;
        }

        .feature-title {
            font-weight: 600;
            font-size: 1.25rem;
        }

        .feature-description {
            font-size: 1rem;
            color: #555;
        }

        .section-header {
            font-weight: 700;
        }

        .btn-cta {
            background-color: #3F51B5;
            border: none;
            font-weight: 600;
            padding: 12px 30px;
            border-radius: 30px;
        }

            .btn-cta:hover {
                background-color: #303F9F;
            }
    </style>
}

<!-- Features Page Header -->
<section class="text-center py-5">
    <div class="container">
        <h1 class="section-header text-primary mb-3">Explore DreamDay Features</h1>
        <p class="lead text-muted">Our platform is built to make wedding planning beautiful, stress-free, and fun.</p>
    </div>
</section>

<!-- Feature Grid -->
<section class="py-4">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-block h-100 text-center">
                    <i class="fas fa-clipboard-list feature-icon"></i>
                    <div class="feature-title">Smart Checklists</div>
                    <p class="feature-description">Auto-generate tasks based on your wedding type, and personalize them to suit your journey.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-block h-100 text-center">
                    <i class="fas fa-chart-line feature-icon"></i>
                    <div class="feature-title">Budget Planner</div>
                    <p class="feature-description">Track expenses, set spending limits, and manage financials with real-time alerts and reports.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-block h-100 text-center">
                    <i class="fas fa-store feature-icon"></i>
                    <div class="feature-title">Vendor Marketplace</div>
                    <p class="feature-description">Browse and book verified vendors — venues, photographers, florists, and more — all in one place.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-block h-100 text-center">
                    <i class="fas fa-users feature-icon"></i>
                    <div class="feature-title">Guest Management</div>
                    <p class="feature-description">Create your guest list, manage RSVPs, track meal preferences, and plan seating effortlessly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-block h-100 text-center">
                    <i class="fas fa-calendar-check feature-icon"></i>
                    <div class="feature-title">Event Timeline</div>
                    <p class="feature-description">Schedule your wedding day flow — from vows to cake cutting — and notify vendors with reminders.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-block h-100 text-center">
                    <i class="fas fa-envelope-open-text feature-icon"></i>
                    <div class="feature-title">Communication Hub</div>
                    <p class="feature-description">Chat with planners, send bulk messages to guests, and coordinate with vendors easily.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="text-center py-5">
    <div class="container">
        <h2 class="text-primary fw-bold mb-3">Ready to Plan Your Perfect Day?</h2>
        <p class="lead text-muted">Sign up and start your personalized wedding journey with DreamDay.</p>
        <a href="/Identity/Account/Register" class="btn btn-cta mt-3">
            <i class="fas fa-calendar-heart me-2"></i> Get Started Now
        </a>
    </div>
</section>
