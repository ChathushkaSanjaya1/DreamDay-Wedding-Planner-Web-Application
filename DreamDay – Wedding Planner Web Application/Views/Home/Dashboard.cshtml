@{
    ViewData["Title"] = "My Dashboard";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            background-color: #f5f7fa;
        }

        /* Sidebar Styling */
        .sidebar {
            background: linear-gradient(180deg, #3F51B5 0%, #5C6BC0 100%);
            color: #fff;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #e0e0e0;
                font-weight: 500;
            }

                .sidebar .nav-link:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }

                .sidebar .nav-link.active {
                    background-color: #fff;
                    color: #3F51B5 !important;
                    font-weight: bold;
                    border-radius: 8px;
                }

        /* Card Icons */
        .card-icon {
            font-size: 1.8rem;
            padding: 10px;
            background-color: #e8eaf6;
            color: #3F51B5;
            border-radius: 50%;
        }

        .progress-bar {
            background-color: #3F51B5;
        }

        .card {
            border-left: 5px solid #3F51B5;
            border-radius: 12px;
            transition: 0.3s;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
            }

        .list-group-item {
            border: none;
            border-bottom: 1px solid #f0f0f0;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-12 col-md-3 col-lg-2 sidebar p-4">
            <h4 class="fw-bold text-white mb-4"><i class="fas fa-gem me-2"></i>DreamDay</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Home" asp-action="Dashboard">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Checklist">
                        <i class="fas fa-check-circle me-2"></i>Checklist
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Budget">
                        <i class="fas fa-wallet me-2"></i>Budget
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Guests">
                        <i class="fas fa-users me-2"></i>Guests
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Dahboard_Vendors">
                        <i class="fas fa-store me-2"></i>Vendors
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Timeline">
                        <i class="fas fa-calendar-alt me-2"></i>Timeline
                    </a>
                </li>
            </ul>

        </nav>

        <!-- Main Dashboard -->
        <main class="col-12 col-md-9 col-lg-10 px-4 py-5">
            <h2 class="fw-bold text-primary mb-4">Hello, Yashodha! 💍</h2>

            <!-- Quick Stats -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="card p-3 shadow-sm h-100">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Checklist</h5>
                            <i class="fas fa-clipboard-list card-icon"></i>
                        </div>
                        <div class="progress mt-3">
                            <div class="progress-bar" style="width: 60%">60%</div>
                        </div>
                        <small class="text-muted mt-2 d-block">12 / 20 tasks completed</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3 shadow-sm h-100">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Budget</h5>
                            <i class="fas fa-wallet card-icon"></i>
                        </div>
                        <h4 class="fw-bold mt-3">Rs. 1.2M / 2M</h4>
                        <small class="text-muted">60% used</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3 shadow-sm h-100">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Guest List</h5>
                            <i class="fas fa-users card-icon"></i>
                        </div>
                        <h5 class="mt-3">150 Guests</h5>
                        <small class="text-muted">100 confirmed • 50 pending</small>
                    </div>
                </div>
            </div>

            <!-- Timeline & Vendors -->
            <div class="row g-4 mb-4">
                <div class="col-md-6">
                    <div class="card p-4 shadow-sm h-100">
                        <h5 class="mb-3"><i class="fas fa-calendar-day me-2 text-primary"></i>Timeline</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">10:00 AM - Makeup & Dressing</li>
                            <li class="list-group-item">01:00 PM - Ceremony Begins</li>
                            <li class="list-group-item">03:00 PM - Photoshoot</li>
                            <li class="list-group-item">06:00 PM - Reception Dinner</li>
                            <li class="list-group-item">08:00 PM - First Dance & Cake Cutting</li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card p-4 shadow-sm h-100">
                        <h5 class="mb-3"><i class="fas fa-handshake me-2 text-primary"></i>Vendors Booked</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">📸 Photographer – Confirmed</li>
                            <li class="list-group-item">🍽️ Caterer – Pending</li>
                            <li class="list-group-item">🎶 DJ – Confirmed</li>
                            <li class="list-group-item">🌸 Florist – Confirmed</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Countdown -->
            <div class="card text-center shadow-sm p-4">
                <h5><i class="fas fa-hourglass-half me-2 text-primary"></i>Wedding Countdown</h5>
                <h2 class="fw-bold text-primary mt-2">75 Days Left</h2>
                <p class="text-muted">Mark the date: 20th July 2025</p>
            </div>
        </main>
    </div>
</div>
