@{
    ViewData["Title"] = "Planner Dashboard";
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            background-color: #f9fbfd;
        }

        .sidebar {
            background: linear-gradient(180deg, #1E88E5 0%, #3949AB 100%);
            color: #fff;
            min-height: 100vh;
            box-shadow: 3px 0 10px rgba(0,0,0,0.05);
        }

            .sidebar .nav-link {
                color: #fff;
                font-weight: 500;
                transition: all 0.2s ease;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background-color: rgba(255, 255, 255, 0.15);
                    border-radius: 8px;
                    color: #fff !important;
                }

        .card {
            border: none;
            border-radius: 16px;
            transition: 0.3s;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
            }

        .card-icon {
            font-size: 2rem;
            color: #fff;
            padding: 12px;
            border-radius: 50%;
            background: linear-gradient(45deg, #42A5F5, #1E88E5);
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .badge-scheduled {
            background-color: #42A5F5;
        }

        .badge-pending {
            background-color: #FFC107;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 sidebar p-4">
            <h4 class="fw-bold mb-4"><i class="fas fa-user-tie me-2"></i>Planner</h4>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link active" asp-controller="Planner" asp-action="Index"><i class="fas fa-gauge me-2"></i>Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Planner" asp-action="Weddings"><i class="fas fa-calendar-heart me-2"></i>My Weddings</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Planner" asp-action="Clients"><i class="fas fa-users me-2"></i>Clients</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Planner" asp-action="Messages"><i class="fas fa-comments me-2"></i>Messages</a></li>
            </ul>
        </nav>

        <!-- Main Dashboard -->
        <main class="col-md-9 col-lg-10 px-4 py-5">
            <h2 class="fw-bold text-primary mb-4"><i class="fas fa-gauge-high me-2"></i>Planner Dashboard</h2>

            <!-- Summary Cards -->
            <div class="row g-4 mb-5">
                <div class="col-md-4">
                    <div class="card p-4 shadow-sm bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Active Weddings</h6>
                                <h3 class="fw-bold">05</h3>
                            </div>
                            <div class="card-icon"><i class="fas fa-heart"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 shadow-sm bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Clients</h6>
                                <h3 class="fw-bold">12</h3>
                            </div>
                            <div class="card-icon"><i class="fas fa-user-friends"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 shadow-sm bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Coordinated Vendors</h6>
                                <h3 class="fw-bold">18</h3>
                            </div>
                            <div class="card-icon"><i class="fas fa-store"></i></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assigned Weddings -->
            <div class="card shadow-sm p-4 bg-white">
                <h5 class="fw-bold text-primary mb-3"><i class="fas fa-calendar-alt me-2"></i>Assigned Weddings</h5>
                <div class="table-responsive">
                    <table class="table table-hover table-borderless align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Wedding Title</th>
                                <th>Date</th>
                                <th>Couple</th>
                                <th>Venue</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Dinuka & Sethmi</td>
                                <td>2025-05-10</td>
                                <td>Sethmi & Dinuka</td>
                                <td>Golden Garden</td>
                                <td><span class="badge badge-scheduled text-white">Scheduled</span></td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Shanika & Praveen</td>
                                <td>2025-06-22</td>
                                <td>Shanika & Praveen</td>
                                <td>Riverside Resort</td>
                                <td><span class="badge badge-pending text-dark">Pending</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>
