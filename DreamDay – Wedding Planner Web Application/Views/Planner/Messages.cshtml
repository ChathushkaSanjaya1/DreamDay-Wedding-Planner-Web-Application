@{
    ViewData["Title"] = "Messages";
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            background-color: #f9fbfd;
        }

        .sidebar {
            background: linear-gradient(180deg, #1E88E5 0%, #3949AB 100%);
            color: #fff;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #e0e0e0;
                font-weight: 500;
            }

                .sidebar .nav-link.active {
                    background-color: #fff;
                    color: #3949AB;
                    border-radius: 8px;
                }

        .message-card {
            border-radius: 12px;
            background-color: #fff;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            padding: 16px;
            transition: all 0.2s ease;
        }

            .message-card:hover {
                transform: translateY(-2px);
            }

        .message-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .message-meta {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .unread-badge {
            font-size: 0.75rem;
            background-color: #FF6F61;
            color: #fff;
            border-radius: 50px;
            padding: 2px 10px;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 sidebar p-4">
            <h4 class="fw-bold mb-4"><i class="fas fa-user-tie me-2"></i>Planner</h4>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" asp-controller="Planner" asp-action="Index"><i class="fas fa-gauge me-2"></i>Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Planner" asp-action="Weddings"><i class="fas fa-calendar-heart me-2"></i>My Weddings</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Planner" asp-action="Clients"><i class="fas fa-users me-2"></i>Clients</a></li>
                <li class="nav-item"><a class="nav-link active" asp-controller="Planner" asp-action="Messages"><i class="fas fa-comments me-2"></i>Messages</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 col-lg-10 px-4 py-5">
            <h2 class="fw-bold text-primary mb-4"><i class="fas fa-comments me-2"></i>Messages</h2>

            <div class="row g-4">
                <!-- Sample Message 1 -->
                <div class="col-md-6">
                    <div class="message-card">
                        <div class="message-header mb-2">
                            <h6 class="fw-bold mb-0">Sethmi Perera</h6>
                            <span class="message-meta">2 mins ago</span>
                        </div>
                        <p class="mb-1 text-muted">Can we confirm the florist meeting for Friday?</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-reply me-1"></i> Reply</a>
                            <span class="unread-badge">New</span>
                        </div>
                    </div>
                </div>

                <!-- Sample Message 2 -->
                <div class="col-md-6">
                    <div class="message-card">
                        <div class="message-header mb-2">
                            <h6 class="fw-bold mb-0">Shanika Perera</h6>
                            <span class="message-meta">1 hr ago</span>
                        </div>
                        <p class="mb-1 text-muted">Thanks for the timeline update. Looks good!</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-reply me-1"></i> Reply</a>
                        </div>
                    </div>
                </div>

                <!-- Add more message previews as needed -->
            </div>
        </main>
    </div>
</div>
